<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/index.css">
    <title>url-shortner</title>
</head>
<body>
    <div class="container">
        <div class="header">
            <span class="head">Url Shortner_</span>
            <span class="secondhead">by HPK</span>
        </div>
        <form action="/short" method="post">
            <label for="url" hidden>URL</label>
            <input required placeholder="url" type="url" id="url" name="url" class="text"/>
            <button type="submit">Shrink!</button>
        </form>
    </div>

    <div class="table-container">
        <div class="inner">
            <table>
                <thead>
                <tr>
                    <th>Full url</th>
                    <th>Short url</th>
                    <th>clicks</th>
                </tr>
                </thead>
                <tbody>
                <% data.forEach(d => { %>
                    <tr>
                        <td><a href="<%= d.full %>"><%= d.full %></a></td>
                        <td><a href="redirect/<%= d.short %>"><%= d.short %></a></td>
                        <td><%= d.clicks %></td>
                    </tr>
                <%})%>
                </tbody>
            </table>
            <div class="table__caption">
                <h2 class="table__header">Shortened url</h2>
                <p class="table__header--sub">list of all the shortened url</p>
            </div>
        </div>

    </div>
</body>
</html>